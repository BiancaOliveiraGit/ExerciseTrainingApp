@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}



<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Exercise1Pic.jpg" alt="Workout Plan Info" class="img-responsive" style="width:1150px;height:420px"; />
            <div class="carousel-caption" role="option">
                <p>
                    Have a look at all the Workout Plans you can do.
                    <a class="btn btn-default" href="WorkoutPlan">
                        Workout Plans
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Stretch1Pic.jpeg" alt="Log Into Account" class="img-responsive" style="width:1150px;height:420px;"/>
            <div class="carousel-caption" role="option">
                <p>
                    Get Started, Log into your account.
                    <a class="btn btn-default" href="Logon">
                        @*TODO link to Logon Page*@
                        Login
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/ContactBanner.jpeg" alt="Contact" class="img-responsive" style="width:1150px;height:420px;"/>
            <div class="carousel-caption" role="option">
                <p>
                    Contact us or want to know more about us.
                    <a class="btn btn-default" href="Contact">
                        @*TODO link to Contact Page*@
                        Contact
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container-fluid">
    <div class="row">
            <div class="col-md-4">
                <a target="_self" href="WorkoutPlan" >
                    <img src="~/images/weights2Pic.jpeg" class="img-responsive" alt="View all Workout plans">
                <div id="indexText" class="centered"><strong>Workout Plans</strong></div>
                </a>
                
            </div>
    
            <div class="col-md-4">
                <a target="_self" href="Logon">
                    <img src="~/images/WeightLift.jpeg" class="img-responsive" alt="Log into your account">
                    <div id="indexText" class="centered"><strong>Account</strong></div>
                </a>
            </div>

            <div class="col-md-4">
                <a target="_self" href="Contact">
                    <img src="~/images/RollMat.jpeg" class="img-responsive" alt="Contact">
                    <div id="indexText" class="centered"><strong>Contact Us</strong></div>
                </a>
            </div>
        </div>
</div>


