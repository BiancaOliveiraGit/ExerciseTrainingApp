

@page
@model ClientWorkoutsModel
@{
    bool debug = true;
}

<div>
    <h3>@ViewData["Title"]</h3>

    @{
        Model.ClientId = 1;
        //  int clientId = int.Parse(PageContext.RouteData.Values["id"].ToString());
        //  Model.ClientId = clientId;

    }

    @{
        var isOk = await Model.GetClientWorkouts();
    }

    @*when less than 3 workout then have Create Workout button*@
    @foreach (var workouts in Model.ClientWorkouts)
    {
        @Html.Partial("_ClientWorkoutPartial", workouts)
    }

    @{
        var numWorkouts = Model.ClientWorkouts.Count;
        var numCreateButton = 3 - numWorkouts;

        for (int i = 1; i <= numCreateButton; i++)
        {
            @Html.Partial("_CreateWorkoutPartial")
        }
    }
</div>
